{% extends 'base.html.twig' %}

{% block body %}
    <h1>Collection</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Item</th>
                <td>{{ collection.item }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td><a href="{{ collection.url }}" target="_blank">{{ collection.url }}</a></td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ collection.status }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ collection.currency }} {{ collection.price | number_format }}</td>
            </tr>
            <tr>
                <th>Shipping cost</th>
                <td>{{ collection.currency }} {{ collection.shippingCost | number_format }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ collection.notes }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="btn-group">
        <li class="btn btn-default">
            <a href="{{ path('collection_index') }}">Back to the list</a>
        </li>
        <li class="btn btn-default">
            <a href="{{ path('collection_edit', { 'id': collection.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
