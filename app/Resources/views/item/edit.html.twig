{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit item</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button class="btn btn-primary" type="submit"><i class="material-icons">save</i></button>
    {{ form_end(edit_form) }}

    <button class="btn btn-default">
        <a href="{{ path('item_index') }}"><i class="material-icons">chevron_left</i></a>
    </button>

    {{ form_start(delete_form) }}
        <button class="btn btn-danger" type="submit"><i class="material-icons">delete</i></button>
    {{ form_end(delete_form) }}
{% endblock %}
